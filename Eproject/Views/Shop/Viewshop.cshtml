@model IEnumerable<Eproject.Models.shop>
@{
    ViewData["Title"] = "Viewshop";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<h1>View Shops</h1>

<div class="page-content fade-in-up">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox">
                <div class="ibox-head">
                    <div class="ibox-title">Shops List</div>
                </div>
                <div class="ibox-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td id="name_@item.Id">@item.Name</td>
                                    <td>
                                        <form asp-action="EditShop" method="post">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="text" name="name" value="@item.Name" />
                                            <button type="submit" class="btn btn-success">Edit</button>
                                        </form>

                                        <form asp-action="DeleteShop" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
